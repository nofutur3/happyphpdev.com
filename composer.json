{
    "config": {
        "vendor-dir": "./vendor",
        "bin-dir": "./bin"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer/installers": "~1.2.0",
        "vlucas/phpdotenv": "^2.0.1",
        "johnpbloch/wordpress": "4.8.1",
        "oscarotero/env": "^1.1.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "wpackagist-plugin/akismet": "^3.3",
        "wpackagist-plugin/code-markup": "^1.3",
        "wpackagist-plugin/google-sitemap-generator": "^4.0",
        "wpackagist-plugin/jetpack": "^5.3",
        "wpackagist-plugin/nk-google-analytics": "^1.4",
        "wpackagist-theme/twentyfifteen": "^1.8"
    },
    "require-dev": {
        "deployer/deployer": "^6.0",
        "squizlabs/php_codesniffer": "^2.5.1"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": [
            "vendor/bin/phpcs"
        ]
    }
}
